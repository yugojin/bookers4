<div class="body">
  <div class="container">
   <div class="row">

   <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
<% end %>

<div class="col-xs-3">
<h2>User info</h2>
 <div class="user-image">
    <%= attachment_image_tag @user, :profile_image, size: "100x100", fallback: "no_image.jpg"%>
  </div>
 <table class="table">
   <tbody>
    <tr></tr>
    <tr>
     <th>name <%= @user.name %></th>
    </tr>
    <tr>
     <th>introduction <%= @user.introduction %></th>
    </tr>
   </tbody>
  </table>
<div class="row">
 <% if @user == current_user %>
      <%= link_to edit_user_path(@user), class: "btn form-control" do %>
        <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
      <% end %>
  <% end %>
 </div>

<h2>New book</h2>
<%= form_for @book do |f| %>
 <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book', class: "btn btn-primary" %>
<% end %>
</div>

<div class="col-xs-9">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
   <thead>
    <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
    </tr>
   </thead>
   <tbody>
      <% @books.each do |book| %>
      <tr>
       <td><%= link_to attachment_image_tag @user, :profile_image, size: "100x100", fallback: "no_image.jpg"%></td>
       <td><%= link_to book.title, book_path(book) %></td>
       <td><%= book.body %></td>
      </tr>
      <% end %>
   </tbody>
  </table>
  </div>
</div>
</div>
</div>