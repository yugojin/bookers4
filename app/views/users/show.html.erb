<h2>User info</h2>
 <div class="user-image">
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  </div>


<h2>New book</h2>
<%= form_for books_path, local: true do |f| %>
 <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>