<div class="body">
  <div class="container">
   <div class="row">
     <h3><%= @user.name %>さんとのチャット</h3>
<tbody>
  <hr>
<% if @messages.present? %>
  <% @messages.each do |m| %>
    <%= m.content %>
    <small>by <strong><a href="/users/<%= m.user_id %>"><%= m.user.email %>さん</a></strong></small>
    <hr>
  <% end %>
<% else %>
  <h3 class="text-center">メッセージはまだありません</h3>
<% end %>

<%= form_for @message do |f| %>
  <%= f.text_field :content, :size => 70 %>
  <%= f.hidden_field :room_id, :value => @room.id %>

<% end %>
</tbody>
</div>
</div>
</div>

