<h2>User info</h2>
 <div class="user-image">
   <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
 </div>
<h4 class="user-name">name <%= current_user.name %></h4>
<h4 class="user-introduction">introduction <%= current_user.introduction %></h4>
<%= link_to  edit_user_path(current_user), class: 'btn btn-default' do %>
  <i class="glyphicon glyphicon-wrench"></i>
<% end %>

<h2>New book</h2>
<%= form_for @book do |f| %>
 <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book', class: "btn btn-primary" %>
<% end %>

<h2>Books</h2>
<% @books.each do |book| %>
<%= link_to attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
<h4>Title</h4>
<%= book.title %>
<h4>Opinion</h4>
<%= book.body %>
<% end %>