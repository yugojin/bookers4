<div class="col-xs-3">
<h2>User info</h2>
 <div class="user-image">
    <%= attachment_image_tag @user, :profile_image, size: "100x100", fallback: "no_image.jpg"%>
  </div>
<h4 class="user-name">name <%= @user.name %></h4>
<h4 class="user-introduction">introduction <%= @user.introduction %></h4>
<%= link_to  edit_user_path(current_user), class: 'btn btn-default' do %>
  <i class="glyphicon glyphicon-wrench"></i>
<% end %>

<h2>New book</h2>
<%= form_for @book do |f| %>
 <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book', class: "btn btn-primary" %>
<% end %>
</div>

<div class="col-xs-9">
 <h2>Book Detail</h2>
 <table class="table">
     <tbody>
         <tr>
            <td><%= attachment_image_tag @user, :profile_image, size: "100x100", fallback: "no_image.jpg" %>
            </br>
            <%= link_to @user.name, user_path %></td>
            <td><%= link_to @book.title %></td>
            <td><%= @book.body %></td>
            <td><%= link_to "Edit", edit_book_path, class: "btn btn-success" %></td>
            <td><%= link_to "Destroy", book_path, class: "btn btn-danger", method: :delete, "data-confirm" => "Are you sure?" %></td>
         </tr>
     </tbody>
 </table>
</div>